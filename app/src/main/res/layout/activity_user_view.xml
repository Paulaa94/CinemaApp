<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="fffffe"
    tools:context="com.example.paula.login.UserView">


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#606060"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#000000"
        android:text="Wyloguj się" />

    <Button
        android:id="@+id/Brepertoire"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bb5b00"
        android:fontFamily="sans-serif-smallcaps"
        android:text="REPERTUAR"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/logout"
        android:layout_toStartOf="@+id/logout" />


    <Button
        android:id="@+id/butDojazd"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bb5b00"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Dojazd"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/films"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/logout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/butDojazd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="Kino Wolność"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp" />


</RelativeLayout>